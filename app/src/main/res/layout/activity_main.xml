<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".activity.MainActivity">


    <RelativeLayout
        android:layout_width="960dp"
        android:layout_height="640dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_corner"
        >

        <cn.com.magnity.coresdksample.surview.CamSurfView
            android:id="@+id/surf_cam"
            android:layout_width="480dp"
            android:layout_height="640dp"
            android:layout_alignParentRight="true"
            />

        <cn.com.magnity.coresdksample.surview.TrackSurfView
            android:id="@+id/surf_track"
            android:layout_width="480dp"
            android:layout_height="640dp"
            android:layout_alignParentRight="true" />

        <cn.com.magnity.coresdksample.surview.MagSurfaceView
            android:id="@+id/surf_mag"
            android:layout_width="480dp"
            android:layout_height="640dp"
            android:layout_alignParentLeft="true"
            />

    </RelativeLayout>


</RelativeLayout>
